{
    "name": "simple-js-terminal",
    "version": "0.0.4",
    "description": "A lightweight, embeddable terminal interface written in plain JavaScript.",
    "keywords": [
        "javascript",
        "shell",
        "console",
        "unix",
        "environment",
        "simulator",
        "terminal"
    ],
    "homepage": "https://github.com/fbongcam/simple-js-terminal#readme",
    "bugs": {
        "url": "https://github.com/fbongcam/simple-js-terminal/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fbongcam/simple-js-terminal.git"
    },
    "license": "MIT",
    "author": "fbongcam",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "files": [
        "dist/index.js"
    ],
    "type": "module",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "dev": "concurrently \"npm run sass\" \"npm run live-server\"",
        "dev-inject": "concurrently \"npm run sass\" \"npm run live-server-css-inject\"",
        "sass": "sass --watch .:. --no-source-map",
        "live-server": "live-server --cors --no-css-inject",
        "live-server-css-inject": "live-server --cors",
        "build": "npx sass terminal.scss terminal.css --no-source-map; rollup -c; gulp; npm pack"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-replace": "^6.0.2",
        "acorn-walk": "^8.3.4",
        "clean-css": "^5.3.3",
        "concurrently": "^9.2.0",
        "gulp": "^5.0.1",
        "gulp-replace": "^1.1.4",
        "live-server": "^1.2.2",
        "rollup": "^2.79.2",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-string-replace": "^1.0.0",
        "rollup-plugin-strip-props": "^1.0.6",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-true-banner": "^1.0.0",
        "sass": "^1.89.2"
    }
}
